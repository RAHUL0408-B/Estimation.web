rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Helper Functions
    // ========================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isTenantOwner(tenantId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/tenants/$(tenantId)).data.ownerUid == request.auth.uid;
    }

    function isTenantAdmin(tenantId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // ========================================
    // Collection Group: Employees
    // ========================================
    match /{path=**}/employees/{employeeId} {
      allow read: if true;
    }

    // ========================================
    // Users Collection
    // ========================================
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
    }

    // ========================================
    // Customers Collection (Legacy)
    // ========================================
    match /customers/{customerId} {
      allow read, write: if isOwner(customerId);
    }

    // ========================================
    // Tenants Collection
    // ========================================
    match /tenants/{tenantId} {
      allow read: if true;
      allow update: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
      allow create: if isAuthenticated();
      
      // ========================================
      // Tenant Subcollections
      // ========================================
      
      match /brand/config {
        allow read: if true;
        allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
      }
      match /theme/config {
        allow read: if true;
        allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
      }

      match /pages/{pageId} {
        allow read: if true;
        allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
        match /{allChildren=**} { allow read: if true; allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId); }
      }

      match /websiteConfig/settings {
        allow read: if true;
        allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
      }

      // Estimates (Subcollection version)
      match /estimates/{estimateId} {
        allow create: if true; 
        allow read: if true;
        allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
      }

      // Employees Subcollection
      match /employees/{employeeId} {
        allow read, update: if true;
        allow write: if isTenantOwner(tenantId) || isTenantAdmin(tenantId);
      }
    }

    // ========================================
    // Orders Collection
    // ========================================
    match /orders/{orderId} {
      allow read: if isAuthenticated() &&
        resource.data.createdByUserId == request.auth.uid;
      allow read: if isAuthenticated() && (
        isTenantOwner(resource.data.tenantId) || isTenantAdmin(resource.data.tenantId)
      );
      allow create: if true;
      allow update, delete: if isAuthenticated() && (
        isTenantOwner(resource.data.tenantId) || isTenantAdmin(resource.data.tenantId)
      );
    }

    // ========================================
    // Estimates Collection (Root)
    // ========================================
    match /estimates/{estimateId} {
      allow read: if isAuthenticated() &&
        resource.data.createdByUserId == request.auth.uid;
      allow read: if isAuthenticated() && (
        isTenantOwner(resource.data.tenantId) || 
        isTenantAdmin(resource.data.tenantId) ||
        resource.data.companyId == request.auth.uid
      );
      allow create: if true;
      allow update: if isAuthenticated() && (
        resource.data.createdByUserId == request.auth.uid ||
        isTenantOwner(resource.data.tenantId) ||
        isTenantAdmin(resource.data.tenantId)
      );
    }

    // ========================================
    // Pricing Configs Collection
    // ========================================
    match /pricing_configs/{tenantId} {
      allow read: if true;
      allow write: if isAuthenticated() && (isTenantOwner(tenantId) || isTenantAdmin(tenantId));
    }

    // ========================================
    // Activities Collection
    // ========================================
    match /activities/{activityId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
    }

    // ========================================
    // Consultation Requests Collection
    // ========================================
    match /consultation_requests/{requestId} {
      allow create: if true;
      allow read, update: if true;
    }

    // ========================================
    // Portfolio Collection
    // ========================================
    match /portfolios/{tenantId} {
      allow read: if true;
      allow write: if isAuthenticated() && (isTenantOwner(tenantId) || isTenantAdmin(tenantId));
    }

    // ========================================
    // Catch-all rule
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
